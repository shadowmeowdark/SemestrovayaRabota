<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<VBox id="VBox" alignment="CENTER_LEFT" prefHeight="300.0" prefWidth="375.0" style="-fx-background-color: #ffffff;"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="MainWindow.SignUpController">
    <children>
        <Label text="Sign Up" textFill="#f78c7b">
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="20.0"/>
            </VBox.margin>
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <HBox alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="345.0"
              style="-fx-background-color: #ffffff00; -fx-border-color: #DEDEE4; -fx-border-width: 0px 0px 1px 0px;">
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="20.0"/>
            </VBox.margin>
            <children>
                <TextField fx:id="username" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           promptText="Username" style="-fx-background-color: #ffffff00;" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="25.0" layoutY="168.0" prefHeight="41.0" prefWidth="345.0"
              style="-fx-background-color: #ffffff00; -fx-border-color: #DEDEE4; -fx-border-width: 0px;">
            <children>
                <PasswordField fx:id="password" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                               promptText="Password" style="-fx-background-color: #ffffff00;" HBox.hgrow="ALWAYS"/>
            </children>
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="20.0"/>
            </VBox.margin>
        </HBox>
        <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="345.0">
            <VBox.margin>
                <Insets left="15.0" right="15.0" top="20.0"/>
            </VBox.margin>
            <children>
                <Label fx:id="information" prefHeight="16.0" prefWidth="241.0">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Label>
                <Button fx:id="signUpButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="90.0"
                        style="-fx-background-color: #F78C7B; -fx-background-radius: 5px; -fx-text-fill: #ffffff;"
                        text="Sign Up"/>
            </children>
        </HBox>
    </children>
</VBox>
